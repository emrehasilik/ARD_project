{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "sourceMap": true,
    "removeComments": true,
    "isolatedModules": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts",
    "declarations.d.ts"  // Burada 'declarations.d.ts' dosyasını dahil ediyoruz
  ]
}
